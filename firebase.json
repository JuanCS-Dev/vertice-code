{
  "hosting": [
    {
      "target": "vertice-ai",
      "source": "vertice-chat-webapp/frontend",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/api/**",
          "run": {
            "serviceId": "vertice-backend",
            "region": "southamerica-east1"
          }
        }
      ],
      "frameworksBackend": {
        "region": "us-central1"
      }
    },
    {
      "target": "europe-west1",
      "source": "vertice-chat-webapp/frontend",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "frameworksBackend": {
        "region": "europe-west1"
      }
    },
    {
      "target": "asia-southeast1",
      "source": "vertice-chat-webapp/frontend",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "frameworksBackend": {
        "region": "asia-southeast1"
      }
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true
    }
  }
}