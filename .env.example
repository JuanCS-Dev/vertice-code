# Vertice Infrastructure Environment Variables
# Copy this file to .env and fill in the real values

# Database Configuration
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=vertice_db
DATABASE_URL=postgresql+asyncpg://user:password@db:5432/vertice_db

# Redis
REDIS_URL=redis://redis:6379

# MCP Server
MCP_SERVER_URL=http://mcp-server:3000

# Google Cloud
GOOGLE_CLOUD_PROJECT=vertice-ai
VERTEX_AI_LOCATION=us-central1

# Frontend / Clerk
NEXT_PUBLIC_API_URL=http://localhost:8000
BACKEND_URL=http://backend:8000
CLERK_SECRET_KEY=sk_test_...
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...

# App Settings
ENVIRONMENT=development
NODE_ENV=production
