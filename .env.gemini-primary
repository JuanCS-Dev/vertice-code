# Primary Provider Configuration: Gemini 1.5 Flash
# Copy to .env and add your API keys

# LLM Provider Selection
LLM_PROVIDER=gemini

# Gemini API (Google AI) - PRIMARY
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash-latest

# Ollama Configuration (Fallback/Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5-coder:latest
OLLAMA_ENABLED=false

# Optional: Nebius AI (Fallback)
NEBIUS_API_KEY=your_nebius_key_here

# Optional: HuggingFace (Last Resort)
HF_TOKEN=your_hf_token_here
HF_MODEL=Qwen/Qwen2.5-Coder-7B-Instruct

# Model Configuration
MAX_CONTEXT_TOKENS=32768

# Gradio UI
GRADIO_PORT=7860
GRADIO_SHARE=false
